<body>
  <div class="wrap">
    <header>
      <div>
        <h1>학습 RPG 허브</h1>
        <div class="muted">원하는 프로젝트를 선택해 바로 플레이하세요.</div>
      </div>
    </header>

    <div class="search">
      <input id="q" type="search" placeholder="검색: 예) 소수, 비와 비율, 분수, RPG" aria-label="프로젝트 검색"/>
    </div>

    <main>
      <div id="grid" class="grid" role="list"></div>
      <div id="empty" class="empty" style="display:none">검색 결과가 없습니다.</div>
    </main>

    <footer>
      © GitHub Pages · 이 허브는 <code>username.github.io</code> 저장소의 <code>index.html</code>로 배포됩니다.
    </footer>
  </div>

  <script>
  // 1) 프로젝트 목록만 수정하면 카드 UI가 자동 생성됩니다.
  // url은 두 방식 모두 지원
  //  - 같은 저장소의 서브폴더: './prime-rpg/'
  //  - 별도 리포의 Project Pages: 'https://username.github.io/ratio-rpg/'
  const PROJECTS = [
    {
      id:'prime-rpg',
      title:'소수의 나눗셈 RPG',
      desc:'소수 ÷ 소수, 자연수 ÷ 소수, 반올림, 남는 양까지 단계별 전투형 학습',
      emoji:'👾',
      url:'./prime-rpg/', // 또는 절대 URL
      tags:['수학','소수','나눗셈','6학년']
    },
    {
      id:'ratio-rpg',
      title:'비와 비율 RPG',
      desc:'비/비율의 의미, 단위비, 비율식, 실제 문제로 진행하는 전투',
      emoji:'🛡️',
      url:'./ratio-rpg/',
      tags:['수학','비와비율','5~6학년']
    },
    // 여기에 추가: { id:'fractions', title:'분수의 덧셈 RPG', desc:'…', emoji:'🧮', url:'./fractions/', tags:['분수','4~5학년'] }
  ];

  const $ = (s)=>document.querySelector(s);
  const grid = $('#grid');
  const empty = $('#empty');
  const q = $('#q');

  function render(list){
    grid.innerHTML = '';
    if(!list.length){ empty.style.display='block'; return; }
    empty.style.display = 'none';
    for(const p of list){
      const card = document.createElement('article');
      card.className = 'card';
      card.setAttribute('role','listitem');
      card.innerHTML = `
        <div class="thumb" aria-hidden="true">${p.emoji||'🎮'}</div>
        <div class="body">
          <div class="title">${p.title}</div>
          <div class="desc">${p.desc||''}</div>
          ${p.tags? `<div class="tags">${p.tags.map(t=>`<span class='tag'>${t}</span>`).join('')}</div>`:''}
        </div>
        <a class="btn" href="${p.url}" rel="noopener">플레이</a>
      `;
      grid.appendChild(card);
    }
  }

  function filterProjects(qs){
    const t = (qs||'').trim().toLowerCase();
    if(!t) return PROJECTS;
    return PROJECTS.filter(p=>{
      const hay = `${p.title} ${p.desc||''} ${(p.tags||[]).join(' ')}`.toLowerCase();
      return hay.includes(t);
    });
  }

  q.addEventListener('input', ()=>{
    render(filterProjects(q.value));
  });

  // 키보드 빠른 이동: ↑/↓로 카드 사이 포커스, Enter로 열기
  document.addEventListener('keydown', (e)=>{
    if(['ArrowDown','ArrowUp'].includes(e.key)){
      const btns = [...document.querySelectorAll('.btn')];
      const i = btns.findIndex(b=>b===document.activeElement);
      const dir = e.key==='ArrowDown'? 1 : -1;
      const ni = Math.max(0, Math.min(btns.length-1, (i<0?0:i+dir)));
      btns[ni]?.focus();
    }
  });

  // 초기 렌더
  render(PROJECTS);
  </script>
</body>
</html>
