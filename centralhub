  <title>학습 RPG 허브</title>
  <style>
    :root{
      --bg:#0f1226; --panel:#171b39; --ink:#e8ecff; --sub:#9aa3d0;
      --accent:#6ae3ff; --good:#3ce27a; --bad:#ff6b6b;
    }
    *{box-sizing:border-box}
    html,body{height:100%}
    body{margin:0; font-family:system-ui,-apple-system,Segoe UI,Roboto,Noto Sans KR,Apple SD Gothic Neo,Arial,sans-serif; color:var(--ink);
      background:radial-gradient(1200px 600px at 70% -10%,#223 0%, #101325 55%, #0b0e1c 100%), var(--bg);}    
    .wrap{min-height:100vh; max-width:1200px; margin:0 auto; padding:20px; display:grid; grid-template-rows:auto auto 1fr}
    header{display:flex; gap:12px; align-items:center; justify-content:space-between}
    h1{font-size:22px; margin:0; letter-spacing:.2px}
    .muted{color:var(--sub)}
    .search{display:flex; gap:8px; margin:14px 0}
    input[type=search]{flex:1; padding:12px 14px; border-radius:12px; border:1px solid rgba(255,255,255,.14); background:#0e1230; color:var(--ink); font-size:16px}
    .grid{display:grid; grid-template-columns:repeat(auto-fill,minmax(240px,1fr)); gap:14px}
    .card{background:linear-gradient(180deg,rgba(255,255,255,.04),rgba(255,255,255,.02)); border:1px solid rgba(255,255,255,.08); border-radius:16px; overflow:hidden; display:flex; flex-direction:column}
    .thumb{height:140px; background:#0d1026; display:flex; align-items:center; justify-content:center; font-size:48px}
    .body{padding:12px 14px}
    .title{font-weight:800; font-size:16px}
    .desc{font-size:13px; color:var(--sub); margin-top:6px; min-height:38px}
    .meta{display:flex; gap:8px; align-items:center; margin-top:10px; font-size:12px; color:var(--sub)}
    .btn{margin:12px 14px 14px; padding:10px 12px; border-radius:10px; border:1px solid rgba(255,255,255,.16); background:linear-gradient(180deg,#2b2f58,#1d2144); color:#fff; font-weight:800; cursor:pointer; text-align:center; text-decoration:none}
    .btn:hover{filter:brightness(1.08)}
    footer{margin-top:18px; font-size:12px; color:var(--sub); opacity:.9}
    .empty{padding:40px; text-align:center; color:var(--sub)}
    .tags{display:flex; gap:6px; flex-wrap:wrap; margin-top:8px}
